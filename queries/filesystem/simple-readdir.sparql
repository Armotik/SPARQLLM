# slm-run --config config.ini -f queries/filesystem/simple-readdir.sparql --debug


PREFIX ex: <http://example.org/>
PREFIX ggf: <http://ggf.org/>
SELECT *
WHERE {
    BIND(URI(ggf:SLM-FILE("./data/events")) AS ?root)
    BIND(ggf:SLM-READDIR(?root,?root) AS ?g)
    GRAPH ?g {
        ?root ex:has_path ?p1 .
        ?p1 ex:has_type ?t1.
        ?p1 ex:has_size ?s1 .
        filter (str(?t1)="file")
        filter (STRENDS(str(?p1), ".txt"))
    } 
}
